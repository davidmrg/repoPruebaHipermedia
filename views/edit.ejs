<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maqueta C3</title>
    <link rel="stylesheet" href="assets/css/styles.css">
</head>

<body>
    <header id="header">
        <div class="center">
            <div id="logo">
                <img src="assets/images/logo1.png" alt="">
                <span id="brand">
                    Maqueta <strong>C1</strong>
                </span>
            </div>

            <div id="menu">
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/formulario">Formulario</a>
                    </li>
                    <li>
                        <a href="/edit">Editar</a>
                    </li>
                    <li>
                        <a href="/delete">Borrar</a>
                    </li>
                </ul>
            </div>
        </div>

    </header>


    <div id="slider" class="slider-big">
        <h1>Bienvenido a proyecto Corte 3</h1>
        <a href="/" class="btn-white">Home</a>
    </div>

    <div class="center">

        <section id="content">
            <h2>Edicion de datos</h2>
            <table class="table">
                <caption class="text-center"></caption>
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Nombre completo</th>
                        <th>Número contacto</th>
                        <th>Comentarios</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < listaRegistros.length; i++){ %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= listaRegistros[i].nombre %></td>
                        <td><%= listaRegistros[i].contacto %></td>
                        <td><%= listaRegistros[i].comentario %></td>
                        <td><a href="/edit/<%= listaRegistros[i]._id %>" class="btn btn-warning">Editar</a></td>
                    </tr>
                    <% } %>
                </tbody>


            </table>


        </section>

        <aside id="sidebar">
            <div id="nav-blog" class="sidebar-item">
                <h3>Menu Sidebar</h3>
                <a href="/formulario" class="btn btn-success">Formulario</a>
                <a href="/edit" class="btn btn-success">Editar</a>
                <a href="/delete" class="btn btn-success">Borrar</a>
            </div>
        </aside>
        <div class="clearfix"></div>

    </div>

    <%- include('partials/footer') %>

</body>

</html>